<Window x:Class="zad7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="aView" Height="200"></TextBox>
            <ScrollBar Minimum="0" Maximum="255" Height="50" x:Name="SliderRed" ValueChanged="Slider_ValueChanged" Orientation="Horizontal"/>
            <ScrollBar Minimum="0" Maximum="255" Height="50" Name="SliderGreen" ValueChanged="Slider_ValueChanged" Orientation="Horizontal"></ScrollBar>
            <ScrollBar Minimum="0" Maximum="255" Height="50" Name="SliderBlue" ValueChanged="Slider_ValueChanged" Orientation="Horizontal"></ScrollBar>
        </StackPanel>
    </Grid>
</Window>
